#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    double salario, total;
    scanf("%lf", &salario);
    if(salario<1000)
    {
        total=(salario+(salario*0.30));
    }
    else if(salario>=1000 && salario<=2000)
    {
        total=(salario+(salario*0.10));
    }
    else{
        total=salario;
    }
    printf("%.2lf", total);
	return 0;
}
