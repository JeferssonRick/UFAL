#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

	double salario,novo;
	scanf("%lf",&salario);
	if(salario>500.00)
	{
		novo=salario+(salario*0.10);
	}
	else if(salario>300.00 && salario<=500.00)
	{
		novo=salario+(salario*0.07);
	}
	else
	{
		novo=salario+(salario*0.05);
	}
	printf("%.2lf\n",novo);
	return 0;
}
